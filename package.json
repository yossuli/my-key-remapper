{
  "name": "my-key-remapper",
  "version": "1.0.0",
  "main": "./out/main/index.js",
  "author": "Yossuli",
  "description": "Windows Keyboard Remapper",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "build:win": "npm run build && electron-builder --win --x64",
    "preview": "electron-vite preview",
    "lint": "ultracite lint",
    "format": "ultracite format",
    "typecheck": "tsc --noEmit",
    "ultracite:fix": "npx ultracite fix",
    "ultracite:check": "npx ultracite check",
    "ultracite:doctor": "npx ultracite doctor",
    "reset:config": "powershell -Command \"Remove-Item -Path $env:APPDATA/my-key-remapper/key-mapping-config*.json -ErrorAction SilentlyContinue\""
  },
  "build": {
    "appId": "com.yossuli.keyremapper",
    "productName": "WindowsKeyRemapper",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        "zip",
        "dir"
      ]
    },
    "files": [
      "out/**/*",
      "package.json"
    ]
  },
  "dependencies": {
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.13",
    "class-variance-authority": "^0.7.1",
    "koffi": "^2.9.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@tailwindcss/postcss": "^4.1.17",
    "@types/node": "^20.0.0",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.22",
    "clsx": "^2.1.1",
    "electron": "^33.0.0",
    "electron-builder": "^26.0.12",
    "electron-vite": "^2.3.0",
    "framer-motion": "^12.23.26",
    "lucide-react": "^0.557.0",
    "postcss": "^8.5.6",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.17",
    "tailwindcss-animate": "^1.0.7",
    "tailwindcss-cli": "^0.1.2",
    "typescript": "^5.0.0",
    "ultracite": "^6.3.10",
    "vite": "^5.0.0"
  }
}
