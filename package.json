{
  "name": "my-key-remapper",
  "version": "1.0.0",
  "main": "./out/main/index.js",
  "author": "Yossuli",
  "description": "Windows Keyboard Remapper",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "build:win": "npm run build && electron-builder --win --x64",
    "preview": "electron-vite preview"
  },
  "build": {
    "appId": "com.yossuli.keyremapper",
    "productName": "WindowsKeyRemapper",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        "zip",
        "dir"
      ]
    },
    "files": [
      "out/**/*",
      "package.json"
    ]
  },
  "dependencies": {
    "koffi": "^2.9.2"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "electron": "^33.0.0",
    "electron-builder": "^26.0.12",
    "electron-vite": "^2.3.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0"
  }
}
